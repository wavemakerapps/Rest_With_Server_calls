{
  "displayName"  : "Google",
  "group"        : "OAuth",
  "templateUrl"  : "/pages/Main/Main.html",
  "controllerUrl": "/pages/Main/Main.js",
  "variablesUrl" : "/pages/Main/Main.variables.json",
  "iconUrl"      : "/resources/images/imagelists/Google.png",
  "resources"    : {
    "styles": [
      "/pages/Main/Main.css"
    ],
    "scripts": [],
    "modules": []
  },
  "properties"   : {
    "accesstoken": {
      "type"    : "string",
      "bindable": "out-bound",
      "value"   : "bind:Variables.OAuthHandlerServiceGetAccessToken.dataSet.value",
      "widget"  : "string",
      "show"    : false,
      "disabled": false
    },
    "loginmode" : {
      "type"       : "list",
      "displayName": "Login Mode",
      "value"      : "manual",
      "options"    : [
        "auto",
        "manual"
      ],
      "widget"     : "list",
      "show"       : true,
      "disabled"   : false,
      "helpText"   : "This property invokes the oAuth authorization on page load if set to auto."
    },
    "login": {
      "type"   : "method",
      "method" : "login"
    },
    "buttoncaption": {
      "type": "string",
      "displayName": "Button Caption",
      "helpText": "This property sets the caption onto the google login button.",
      "bindable": "in-bound",
      "value": "Login with Google",
      "widget": "string",
      "show": true,
      "disabled": false
    },
    "buttonclass": {
      "type": "string",
      "displayName": "Button Class",
      "helpText": "This property sets the custom class onto the google login button",
      "bindable": "in-bound",
      "widget": "string",
      "show": true,
      "disabled": false
    },
    "callbackurl": {
      "type": "string",
      "displayName": "Callback URL",
      "bindable": "out-bound",
      "value": "bind:Variables.OAuthHandlerServiceGetCallbackURL.dataSet.value",
      "widget": "string",
      "show": false,
      "disabled": false
    },
    "authorizationheader": {
      "type": "string",
      "displayName": "Requires Header",
      "bindable": "out-bound",
      "value": "bind:'Bearer '+ accesstoken",
      "widget": "string",
      "show": false,
      "disabled": false
    },
    "loginsuccessmessage": {
      "type": "string",
      "displayName": "Success Message",
      "helpText": "This property will set the text for the toaster after successful authorization",
      "bindable": "in-bound",
      "widget": "string",
      "value" : "Login Successful!",
      "show": true,
      "disabled": false
    },
    "onLoginsuccess" : {
      "type" : "event",
      "widget" : "eventlist",
      "show" : true,
      "disabled" : false,
      "helpText" : "This event will be invoked after successful login"
    }
  }
}